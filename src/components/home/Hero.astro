---
const { image, title, subtitle, description, primaryCta, secondaryCta, badges, nextEvent } = Astro.props;
---

<div class="hero-container">
  <div class="hero-content">
    <div style="display: flex; gap: var(--space-3); margin-bottom: var(--space-4);">
      {badges && badges.map((badge) => (
        <span class="badge">
          {badge}
        </span>
      ))}
    </div>
    <h1 class="hero-title">
      {title}
    </h1>
    {subtitle && (
      <p class="hero-subtitle">
        {subtitle}
      </p>
    )}
    {description && (
      <p class="hero-description">
        {description}
      </p>
    )}
    <div class="hero-ctas">
      {primaryCta && (
        <a href={primaryCta.href} class="btn btn-primary">
          {primaryCta.label}
        </a>
      )}
      {secondaryCta && (
        <a href={secondaryCta.href} class="btn btn-secondary">
          {secondaryCta.label}
        </a>
      )}
    </div>
    {nextEvent && (
      <div class="hero-next-event">
        <small>Ê¨°ÂõûÂá∫Â∫óÔºö{nextEvent}</small>
      </div>
    )}
  </div>
  <div class="hero-image">
    {image && (
      <img src={image} alt={title} />
    )}
    {!image && (
      <div class="hero-placeholder">
        üçó
      </div>
    )}
  </div>
</div>

<style>
  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
    min-height: 500px;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
    width: fit-content;
  }

  .hero-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: white;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--space-6);
    line-height: 1.4;
  }

  .hero-description {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-8);
    line-height: 1.6;
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
    flex-wrap: wrap;
  }

  .hero-next-event {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--text-sm);
  }

  .hero-image {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image img {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .hero-placeholder {
    width: 100%;
    height: 400px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 5rem;
    backdrop-filter: blur(10px);
  }

  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: var(--space-8);
      min-height: auto;
    }

    .hero-title {
      font-size: var(--text-3xl);
    }

    .hero-subtitle {
      font-size: var(--text-lg);
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .hero-ctas {
      gap: var(--space-3);
    }
  }
</style>
