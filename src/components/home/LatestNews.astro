---
const { posts } = Astro.props;
---

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: var(--space-8);">
  {posts.map((post) => (
    <a href={`/news/${post.slug}/`} style="text-decoration: none; color: inherit; display: block;">
      <div class="card">
        <img
          src="/assets/images/common/hero.webp"
          alt={post.data.title}
          class="card-image"
          style="height: 180px; margin-bottom: var(--space-4);"
        />
        <div class="muted" style="margin-bottom: var(--space-2);">
          {post.publishedAt.toLocaleDateString("ja-JP")}
        </div>
        <h3 style="margin-bottom: var(--space-3); color: var(--text);">
          {post.data.title}
        </h3>
        <p style="margin: 0; color: var(--text-secondary); font-size: var(--text-sm); display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
          {post.data.description}
        </p>
      </div>
    </a>
  ))}
</div>
