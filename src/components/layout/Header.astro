---
import Container from "./Container.astro";
import Button from "../ui/Button.astro";
---

<header class="site-header">
  <Container>
    <div class="site-header-content">
      <a href="/" aria-label="Jerk Chicken Stand" style="flex-shrink: 0;">
        <img src="/assets/images/common/logo.svg" alt="Jerk Chicken Stand" width="120" height="32" />
      </a>
      <nav class="site-nav" style="flex: 1;">
        <a href="/">Home</a>
        <a href="/menu/">Menu</a>
        <a href="/schedule/">Schedule</a>
        <a href="/access/">Access</a>
        <a href="/order/">Order</a>
        <a href="/news/">News</a>
        <a href="/contact/">Contact</a>
      </nav>
      <Button href="/order/" variant="primary" class="btn-sm" style="white-space: nowrap;">
        予約する
      </Button>
    </div>
  </Container>
</header>

<style>
  .btn-sm {
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
  }
</style>
